{
    "name": "joomla/joomla-cms",
    "type": "project",
    "description": "Joomla CMS",
    "homepage": "https://www.joomla.org",
    "license": "GPL-2.0-or-later",
    "config": {
        "platform": {
            "php": "8.1.0"
        }
    },
    "require": {
        "php": "^8.1.0",
        "joomla/joomla-cms-dependencies": "~4.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpmd/phpmd": "^2.9"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\CMS\\": "libraries/src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('installation/configuration.php-dist', 'configuration.php');\""
        ]
    }
}
